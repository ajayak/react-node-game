{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
	"jest": true
  },
  "globals": {
    "window": true,
    "document": true
  },
  "plugins": [
  ],
  "extends": "eslint-config-airbnb",
  "rules": {
    "indent": [2, "tab", { "SwitchCase": 1, "VariableDeclarator": 1 }],
    "no-tabs": "off",
    "react/jsx-indent-props": [2, "tab"],
    "react/jsx-indent": [2, "tab"],
	"import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.test.jsx"]}]
  }
}
